<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="attendance_management_app.Views.Administrator.Graficos"
             BackgroundColor="#F5F7FA"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <!-- Header Section -->
            <Frame BackgroundColor="#4361EE" 
                   Padding="20" 
                   HasShadow="True" 
                   CornerRadius="0">
                <StackLayout>
                    <Label Text="Asistencias"   
                           VerticalOptions="Start"
                           HorizontalOptions="Start"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Visualiza las asistencias, tardanzas, faltas de los empleados"
                           VerticalOptions="Start"
                           HorizontalOptions="Start"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9" />
                </StackLayout>
            </Frame>

            <!-- Tab Buttons -->
            <Frame HasShadow="False"
                   CornerRadius="9"
                   Padding="-2,-2,0,0"
                   Margin="0,20,0,15"
                   HorizontalOptions="Center">
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="-8"
                             Padding="0"
                             Margin="0"
                             HeightRequest="40">
                    <!-- Botón Semanal -->
                    <Button Text="Semanal"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Margin="2"
                            WidthRequest="150"
                            BackgroundColor="#6A83FF"
                            TextColor="White"
                            x:Name="DiarioButton"
                            Clicked="DiarioButton_Clicked" />

                    <!-- Botón Mensual -->
                    <Button Text="Mensuales"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Margin="2"
                            WidthRequest="150"
                            BackgroundColor="White"
                            TextColor="Black"
                            x:Name="MensualButton"
                            Clicked="MensualButton_Clicked" />
                </StackLayout>
            </Frame>

            <!-- Daily Chart Frame -->
            <Frame x:Name="GraficoDiario"
                   HeightRequest="395"
                   Padding="15"
                   BorderColor="Black"
                   CornerRadius="15"
                   HasShadow="True"
                   Margin="10,10,10,0">
                <StackLayout>
                    <Label Text="GRAFICO SEMANAL"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#374151"
                           HorizontalOptions="Center"
                           Margin="0,0,0,15" />
                    <forms:ChartView x:Name="dailyChart"
                                     HeightRequest="320" />
                </StackLayout>
            </Frame>

            <!-- Monthly Chart Frame -->
            <Frame x:Name="GraficoMensual"
                   HeightRequest="395"
                   Padding="15"
                   BorderColor="Black"
                   CornerRadius="15"
                   HasShadow="True"
                   Margin="10,10,10,0">
                <StackLayout>
                    <Label Text="GRAFICO MENSUAL"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#374151"
                           HorizontalOptions="Center"
                           Margin="0,0,0,15" />
                    <forms:ChartView x:Name="monthlyChart"
                                     HeightRequest="320" />
                </StackLayout>
            </Frame>

            <!-- Bottom Navigation Bar -->
            <Grid VerticalOptions="EndAndExpand"
                  Padding="0"
                  Margin="-20, 0, -20, 0"
                  BackgroundColor="Black"
                  HorizontalOptions="Center"
                  ColumnSpacing="-10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Dashboard Button -->
                <Button Grid.Column="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="Black"
                        TextColor="White"
                        WidthRequest="110"
                        ImageSource="grafico.png"
                        ContentLayout="Top, 10"
                        Padding="0,12,0,10"
                        x:Name="BtnCharts" />

                <!-- Employees Button -->
                <Button Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="Black"
                        TextColor="White"
                        WidthRequest="110"
                        ImageSource="usuario.png"
                        ContentLayout="Top, 10"
                        Padding="0,12,0,10"
                        x:Name="BtnEmployee"
                        Clicked="BtnEmployee_Clicked" />

                <!-- Logout Button -->
                <Button Grid.Column="2"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="Black"
                        TextColor="White"
                        WidthRequest="110"
                        ImageSource="cerrarsession.png"
                        ContentLayout="Top, 10"
                        Padding="-6,12,9,10"
                        x:Name="BtnLogOut"
                        Clicked="BtnLogOut_Clicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>