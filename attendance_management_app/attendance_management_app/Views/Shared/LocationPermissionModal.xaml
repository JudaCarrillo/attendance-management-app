<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="attendance_management_app.LocationPermissionModal">

    <StackLayout Padding="20">
        <Label Text="Esta aplicación necesita acceso a tu ubicación. ¿Deseas permitirlo?"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        <Button Text="Permitir" Clicked="AllowButton_Clicked" />
        <Button Text="Denegar" Clicked="DenyButton_Clicked" />
    </StackLayout>
</ContentPage>
