<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="attendance_management_app.Views.Employee.Inicio"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#f5f7fa">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <StackLayout Spacing="15" Padding="0">
                <!-- Header with gradient background -->
                <Frame Padding="20" CornerRadius="0" HasShadow="False">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4e67f7" Offset="0.0" />
                            <GradientStop Color="#6b8cff" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>

                    <StackLayout Spacing="8">
                        <Label Text="HOLA JUAN" 
                               TextColor="White"
                               FontSize="26" 
                               FontAttributes="Bold" />
                        <Label Text="Recuerda marcar tu asistencia de hoy" 
                               TextColor="White"
                               FontSize="16" 
                               Opacity="0.9" />
                    </StackLayout>
                </Frame>

                <!-- Work Status Card -->
                <Frame CornerRadius="10" Padding="0" HasShadow="True" BorderColor="Transparent">
                    <StackLayout>
                        <Grid Padding="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Frame Grid.Column="0" 
                                   HeightRequest="30" 
                                   WidthRequest="30" 
                                   CornerRadius="15" 
                                   BackgroundColor="#e8f7e8" 
                                   Padding="0" 
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Frame HeightRequest="12" 
                                       WidthRequest="12" 
                                       CornerRadius="6" 
                                       BackgroundColor="#39c168" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" 
                                       HasShadow="False" />
                            </Frame>

                            <Label Grid.Column="1" 
                                   Text="JORNADA LABORAL" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   VerticalOptions="Center" 
                                   Margin="10,0,0,0" />
                        </Grid>

                        <BoxView HeightRequest="1" Color="#f0f0f0" />

                        <Label Text="Part Time Morning" 
                               FontSize="18" 
                               Margin="15,10" 
                               TextColor="#333333" />
                    </StackLayout>
                </Frame>

                <!-- Schedule Card -->
                <Frame CornerRadius="10" Padding="15" HasShadow="True" BorderColor="Transparent">
                    <StackLayout Spacing="15">
                        <Label Text="Horario" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#555555" />

                        <Label Text="8:00 a.m. - 12:00 p.m." 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="#333333" 
                               HorizontalOptions="Center" />

                        <Button Text="Entrar" 
                                BackgroundColor="#4e67f7" 
                                TextColor="White" 
                                CornerRadius="25" 
                                HeightRequest="50" 
                                FontAttributes="Bold"
                                FontSize="16" />
                    </StackLayout>
                </Frame>

                <!-- Birthday Card -->
                <Frame CornerRadius="10" Padding="0" HasShadow="True" BorderColor="Transparent" Margin="0,0,0,70">
                    <StackLayout>
                        <Grid Padding="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Frame Grid.Column="0" 
                                   HeightRequest="30" 
                                   WidthRequest="30" 
                                   CornerRadius="15" 
                                   BackgroundColor="#ffe8ed" 
                                   Padding="0" 
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Frame HeightRequest="12" 
                                       WidthRequest="12" 
                                       CornerRadius="6" 
                                       BackgroundColor="#ff4d7a" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" 
                                       HasShadow="False" />
                            </Frame>

                            <Label Grid.Column="1" 
                                   Text="CUMPLEAÑOS" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   VerticalOptions="Center" 
                                   Margin="10,0,0,0" />
                        </Grid>

                        <BoxView HeightRequest="1" Color="#f0f0f0" />

                        <Label Text="Cumpleaños de Juan Manuel" 
                               FontSize="18" 
                               Margin="15,10" 
                               TextColor="#333333" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>

        <!-- Navigation Bar -->
        <Grid Grid.Row="1"
              VerticalOptions="End"
              Padding="0"
              Margin="0"
              BackgroundColor="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Black"
                    TextColor="White"
                    
                    ImageSource="@drawable/Home"
                    ContentLayout="Top, 10"
                    Padding="0,12,0,10" />

            <Button Grid.Column="1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Black"
                    TextColor="White"
                    ImageSource="@drawable/grafico"
                    Clicked="OnDashboardView"
                    ContentLayout="Top, 10"
                    Padding="0,12,0,10" />

            <Button Grid.Column="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Black"
                    TextColor="White"
                    ImageSource="@drawable/cerrarsession"
                    Clicked="OnLogoutButtonClicked"
                    ContentLayout="Top, 10"
                    Padding="0,12,0,10" />
        </Grid>
    </Grid>
</ContentPage>